<%= error_messages_for :project %>

<%= form_for @project do |f| -%>
  <p>
    Name: <%= f.text_field :name %>
  </p>

  <div id="tasks">
    <%= render partial: 'tasks/new_task', collection: @project.tasks %>
  </div>

  <p>
    <%= link_to 'Add a task', {action: :new_task, controller: :tasks}, id: "add_task" %>
  </p>

  <p>
    <%= f.submit "Submit" %>
  </p>
  
<% end -%>